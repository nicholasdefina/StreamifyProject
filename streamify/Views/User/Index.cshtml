@model streamify.Models.UserViewModels

<h1>Streamify</h1>

<div class="container">
    <div class="half">
    <h1>Register</h1>
    <form asp-controller="User" asp-action="Register" method="POST">
        <label>First Name:</label>
        <span asp-validation-for="Reg.First"></span>
        <input class="form-control" asp-for="Reg.First">   <!-- Reg.First to accessed RegisterViewModel called Reg, then First for first name -->
        <br>
        <label>Last Name:</label>
        <span asp-validation-for="Reg.Last"></span>
        <input class="form-control" asp-for="Reg.Last">  
        <br>
        <label>Email:</label>
        <span asp-validation-for="Reg.Email"></span>
        <input class="form-control" asp-for="Reg.Email">
        <br>
        <label>Birthday:</label>
        <span asp-validation-for="Reg.Bday"></span>
        <input type="date" class="form-control" asp-for="Reg.Bday">
        <br>
        <label>Password:</label>
        <span asp-validation-for="Reg.Password"></span>
        <input class="form-control" asp-for="Reg.Password">
        <br>
        <label>Confirm Password:</label>
        <span asp-validation-for="Reg.Confirm"></span>
        <input class="form-control" asp-for="Reg.Confirm">
        <br>
        <button class="btn btn-info">Register!</button>
    </form>
    </div>
    <div class="half" id="left">
        <h1>Login</h1>
        <form asp-controller="User" asp-action="Login">
            <label>Email:</label>
            <span asp-validation-for="Login.Email"></span>
            <input class="form-control" asp-for="Login.Email">
            <br>
            <label>Password</label>
            <span asp-validation-for="Login.Password"></span>
            <input class="form-control" asp-for="Login.Password">
            <br>
            <button class="btn btn-info">Login!</button>
        </form>
    </div>
</div>